<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card bg-black text-white rounded">
      <div class="card-header text-center pt-3">
        <h3 class="text-white">Subscription Form</h3>
      </div>
      <div class="card-body">
        <form action="/subscriptions/new-subscription" method="POST">
          <div class="mb-3">
            <label for="Name of the car chosen">Car</label>
            <input
              type="text"
              name="car"
              class="form-control bg-dark text-white"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="Quantity of people you travel with">Passengers</label>
            <input
              type="number"
              name="passengers"
              class="form-control bg-dark text-white"
              autofocus
            />
          </div>
          <button class="btn btn-primary w-100" style="background-color: rgb(242, 191, 64);" type="submit">
            Confirm
          </button>
        </form>
      </div>
    </div>
  </div>
</div>